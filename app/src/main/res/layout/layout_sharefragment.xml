<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:text="查找共享"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:textColor="#333333"
            android:background="#f2f2f2"
            android:id="@+id/btn_find_share"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@mipmap/transport_wifi"
            android:text="查找同WIFI下的共享设备"
            android:drawablePadding="15dp"
            android:paddingLeft="20dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedfdf" />

        <Button
            android:background="#f2f2f2"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:textColor="#333333"
            android:id="@+id/btn_qrcode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@mipmap/transport_qrcode"
            android:text="扫描二维码"
            android:drawablePadding="15dp"
            android:paddingLeft="20dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedfdf" />

        <Button
            android:background="#f2f2f2"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:textColor="#333333"
            android:id="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@mipmap/transport_download"
            android:text="查看下载列表"
            android:drawablePadding="15dp"
            android:paddingLeft="20dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dedfdf" />

        <Button
            android:background="#f2f2f2"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:textColor="#333333"
            android:id="@+id/btn_pushtv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@mipmap/transport_dlna"
            android:text="投电视"
            android:drawablePadding="15dp"
            android:paddingLeft="20dp"/>
    </LinearLayout>
</LinearLayout>
